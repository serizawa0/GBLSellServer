generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserCategorie{
  idUserCat Int @id @default(autoincrement())
  nomCat String
  autorisation Int
  users User[]
}


model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  password String
  idUserCat Int
  factures Facture[]
  cat UserCategorie @relation(fields: [idUserCat], references: [idUserCat])
}

model FactureElement{
  id Int @id @default(autoincrement())
  libelle String
  nombre Int
  montant Int
  factureId Int
  facture Facture @relation(fields: [factureId], references: [id], onDelete: Cascade)
}

model Facture{
  id Int @id @default(autoincrement())
  date DateTime
  titre String
  elements FactureElement[]
  total Int
  state String
  userId Int
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
